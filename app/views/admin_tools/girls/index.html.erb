<h1>女の子一覧</h1>

<p>
  <%= link_to '新規作成', new_admin_tools_girl_path %>
</p>

<table table="table">
  <thead>
    <tr>
      <td>ID</td>
      <td>名前</td>
      <td>精神状態</td>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @girls.each do |girl| %>
      <tr>
        <td><%= girl.id %></td>
        <td><%= girl.name %></td>
        <td><%= girl.spirit %></td>
        <td><%= link_to '詳細', admin_tools_girl_path(girl) %></td>
        <td><%= link_to '編集', edit_admin_tools_girl_path(girl) %></td>
        <td><%= link_to '削除', admin_tools_girl_path(girl), method: :delete, data: { confirm: '削除しますか?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<p>
  <%= link_to '戻る', admin_tools_tops_path %>
</p>
