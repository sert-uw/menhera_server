<h1>メッセージの関連性</h1>

<p>
  <strong>簡易テキスト</strong>:<%= @response_candidate.short_text %>
</p>
<p>
  <strong>テキスト</strong>:<%= @response_candidate.text %>
</p>

<h2>会話フロー</h2>

<table table="table">
  <thead>
    <tr>
      <td>女の子から</td>
      <td>依存度ポイント</td>
      <td>次のメッセージID</td>
      <td>次のメッセージテキスト</td>
      <th colspan="1"></th>
    </tr>
  </thead>

  <tbody>
    <% @message_responses.each do |mr| %>
      <tr>
        <td><%= mr.message_list.text %></td>
        <td><%= mr.dependence_point %></td>
        <td><%= mr.next_message_id %></td>
        <td><%= mr.next_message.text %></td>
        <td><%= link_to '編集', edit_admin_tools_girl_message_list_response_candidate_path(@girl, mr, from: 'response_candidate') %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<p>
  <%= link_to '戻る', admin_tools_girl_message_lists_path(@girl) %>
</p>
